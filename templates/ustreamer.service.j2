[Unit]
Description=uStreamer service
After=network.target

[Service]
User={{octoprint_user}}
ExecStart=/usr/bin/ustreamer --process-name-prefix ustreamer --log-level 0 --device {{ ustreamer_dev }} --device-timeout=8  --quality 100 --resolution 1920x1080 --desired-fps=29 --host=0.0.0.0 --port={{ ustreamer_port }} --static /var/www/html/ustreamer/

[Install]
WantedBy=multi-user.target